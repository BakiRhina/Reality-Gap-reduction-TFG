<?xml version="1.0" ?>
<sdf version="1.8">

  <world name="one_joint_gripper_world">

    <!-- LIGHT -->

    <light type="directional" name="sun">
        <cast_shadows>true</cast_shadows>
        <pose>0 0 10 0 0 0</pose>
        <diffuse>0.8 0.8 0.8 1</diffuse>
        <specular>0.2 0.2 0.2 1</specular>
        <attenuation>
            <range>1000</range>
            <constant>0.9</constant>
            <linear>0.01</linear>
            <quadratic>0.001</quadratic>
        </attenuation>
        <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="one_joint_gripper">
      
      <!-- Base link -->
      <link name="base_link">
        <pose>0 0 0 0 0 0</pose>
        <collision name="base_collision">
          <geometry>
            <box>
              <size>0.1 0.05 0.01</size>
            </box>
          </geometry>
        </collision>
        <visual name="base_visual">
          <geometry>
            <box>
              <size>0.1 0.05 0.01</size>
            </box>
          </geometry>
        </visual>
      </link>

      <!-- Left finger -->
      <link name="finger_left">
        <pose>0.05 0.025 0 0 0 0</pose>
        <collision name="finger_left_collision">
          <geometry>
            <box>
              <size>0.05 0.01 0.01</size>
            </box>
          </geometry>
        </collision>
        <visual name="finger_left_visual">
          <geometry>
            <box>
              <size>0.05 0.01 0.01</size>
            </box>
          </geometry>
        </visual>
      </link>

      <!-- Right finger (static, does not move) -->
      <link name="finger_right">
        <pose>-0.05 0.025 0 0 0 0</pose>
        <collision name="finger_right_collision">
          <geometry>
            <box>
              <size>0.05 0.01 0.01</size>
            </box>
          </geometry>
        </collision>
        <visual name="finger_right_visual">
          <geometry>
            <box>
              <size>0.05 0.01 0.01</size>
            </box>
          </geometry>
        </visual>
      </link>

      <!-- Joint for left finger -->
      <joint name="left_finger_joint" type="revolute">
        <parent>base_link</parent>
        <child>finger_left</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-0.5</lower>
            <upper>0</upper>
          </limit>
        </axis>
      </joint>
    </model>
  </world>
</sdf>
