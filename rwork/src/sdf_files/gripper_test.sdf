<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="one_joint_gripper">
    
    <!-- Base link -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.1 0.05 0.01</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.1 0.05 0.01</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Left finger -->
    <link name="finger_left">
      <pose>0.05 0.025 0 0 0 0</pose>
      <collision name="finger_left_collision">
        <geometry>
          <box>
            <size>0.05 0.01 0.01</size>
          </box>
        </geometry>
      </collision>
      <visual name="finger_left_visual">
        <geometry>
          <box>
            <size>0.05 0.01 0.01</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Right finger (static, does not move) -->
    <link name="finger_right">
      <pose>-0.05 0.025 0 0 0 0</pose>
      <collision name="finger_right_collision">
        <geometry>
          <box>
            <size>0.05 0.01 0.01</size>
          </box>
        </geometry>
      </collision>
      <visual name="finger_right_visual">
        <geometry>
          <box>
            <size>0.05 0.01 0.01</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Joint for left finger -->
    <joint name="left_finger_joint" type="revolute">
      <parent>base_link</parent>
      <child>finger_left</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.5</lower>
          <upper>0</upper>
        </limit>
      </axis>
    </joint>
    
  </model>
</sdf>
